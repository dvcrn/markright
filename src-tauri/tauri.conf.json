{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "MarkRight",
  "version": "0.1.0",
  "identifier": "com.markright.app",
  "build": {
    "frontendDist": "../node/ui",
    "beforeBuildCommand": "bun run tauri:prepare && bun run shadow-cljs release front"
  },
  "app": {
    "windows": [
      {
        "title": "MarkRight",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
